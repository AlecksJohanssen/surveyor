<div class="card">
  <div class="card-block">
    <div class="form-group row">
      <div class="col-sm-10">
        <%= f.text_field :title, placeholder: "Question", class: 'form-control' %>
      </div>
      <div class="col-sm-2">
        <%= f.select :type, Question.type_options, {}, class: 'form-control' %>
      </div>
    </div>

    <%= f.fields_for :choices do |fc| %>
      <div class="form-group row">
        <div class="col-xs-1"></div>
        <div class="col-xs-10">
          <%=  fc.text_field :content, placeholder: "Choice", class: 'form-control' %>
        </div>
        <div class="col-xs-1">
          <%= link_to "&times;".html_safe, fc.object, method: 'delete' %>
        </div>
      </div>
    <% end %>
  </div>
  <% if f.object.persisted? %>
    <div class="card-footer" style="text-align: right">
      <%= link_to "Delete", f.object, method: 'delete', class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
