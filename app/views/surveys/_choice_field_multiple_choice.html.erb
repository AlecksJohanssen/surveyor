<div class="form-group form-inline">
  <label class="c-input c-radio">
    <%= radio_button_tag '', ''  %>
    <span class="c-indicator"></span>
  </label>
  <%=  fc.text_field :content, placeholder: "Choice", class: 'form-control' %>
  <% if fc.object.persisted? %>
    <%= link_to "&times;".html_safe, fc.object, method: 'delete', class: 'btn btn-secondary', remote: true %>
  <% end %>
</div>
