<h1>Edit</h1>

<%= form_for @survey do |f| %>
  <%= render "errors", object: f.object %>
  <div class="card">
    <div class="card-block">
      <div class="form-group">
        <%= f.text_field :title, placeholder: "Survey title", class: 'form-control' %>
      </div>
      <%= link_to "Add Question", '/', class: 'btn btn-secondary' %>
    </div>
    <% f.object.questions.each do |question| %>
      <%= f.fields_for question do |fq| %>
        <div class="card-block">
          <div class="form-group row">
            <div class="col-sm-10">
              <%= fq.text_field :title, placeholder: "Question", class: 'form-control' %>
            </div>
            <div class="col-sm-2">
              <%= fq.select :type, Question.types, {}, class: 'form-control' %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
    <div class="card-block">
      <%= f.submit "Save", class: 'btn btn-secondary' %>
    </div>
  </div>
<% end %>
